<% include ../header %>
<h1>Edit.ejs</h1>
    

   
    <form action=<%= '/blobs/'+ blob._id + '/edit' %> method='post' name='updateblob' enctype='application/x-www-form-urlencoded'>
        <input type='text' value='<%= blob.title %>' name='title'>
        <input type='text' value='<%= blob.description %>' name='description'>
        <input type='number' value='<%= blob.price %>' name='price'>
        <input type='text' value='<%= blob.year %>' name='year'>
        <input type='text' value='<%= blob.location %>' name='location'>
        <input type='text' value='<%= blob.url %>' name='url'>
        <input type='text' value='<%= blob.source %>' name='source'>
        <input type='hidden' value='PUT' name='_method'>
        <button type="submit">Submit</button>
    </form>

<% include ../footer %>